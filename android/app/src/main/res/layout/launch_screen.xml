<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_weight="8"
        android:gravity="center"
        android:weightSum="1">

        <ImageView
            android:id="@+id/applogo"
            android:layout_width="200dip"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_app_logo_full"
            tools:targetApi="donut"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/sflogo"
            android:layout_width="300dip"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sf_rio_name"
            android:src="@drawable/ic_logo_rio_sf"
            tools:targetApi="donut"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/backgroundrio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:contentDescription="@string/sf_rio_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_background_rio"
            tools:targetApi="donut"/>
    </LinearLayout>
</LinearLayout>
